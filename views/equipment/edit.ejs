<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Edit <%= equipment.equipName%></h1>
    <div class="btn-toolbar mb-2 mb-md 0">
      <div class="btn-group me-2">
        <button class="btn btn-sm btn-outline-secondary">?</button>
      </div>
    </div>
  </div>

  <div class="col py-3">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item active"><%= equipment.equipName%></li>
          </ol>
        </nav>
      </div>
      <div class="col text-end fw-lighter">
        <b>Last Updated: <%= equipment.updatedAt%></b>
        <b>UserId: <%= equipment._id%></b>
      </div>
    </div>
  
  </div>

  <form action="/edit/<%= equipment._id %>?_method=PUT" method="POST">

    <div class="row form-group mb-4">
      <div class="col">
        <label for="equipName">Equipment Name</label>
        <input type="text" class="form-control" id="equipName" name="equipName" value="<%= equipment.equipName %>" placeholder="Equipment Name" required>
      </div>
  
      <div class="col">
        <label for="equipID">Equipment ID</label>
        <input type="text" class="form-control" id="equipID" name="equipID" value="<%= equipment.equipID %>" placeholder="Equipment ID" required>
      </div>
    </div>
  
    <div class="row form-group mb-4">
      <div class="col">
        <label for="quan">Quantity</label>
        <input type="text" class="form-control" id="quan" name="quan" value="<%= equipment.quan %>" placeholder="Quantity" required>
      </div>
  
      
    </div>
  
  
    <div class="form-group mb-4">
        <label for="details">Equipment Details</label>
        <textarea class="form-control" name="details" id="details" cols="30" rows="12" placeholder="Equipment Details">
<%= equipment.details %>
        </textarea>
    </div>
  
    <div class="form-group mb-4">
      <button type="submit" class="btn btn-primary">Update Equipment</button>
      <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Equipment</button>

    </div>
   </form>

   <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <div class="modal-title">You are about to remove a equipment record.</div>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>
            This will remove the equipment record of <b class="fw-bold"><%= equipment.equipName %> <%= equipment.equipID %></b><br/>
            Are you sure?
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <form action="/edit/<%= equipment._id %>?_method=DELETE" method="POST" class="position-relative">
            <button type="submit" class="btn btn-primary">Yes, Remove Equipment</button>
          </form>
        </div>
      </div>
    </div>
  </div>